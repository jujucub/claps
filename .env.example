# Anthropic API（Max Plan使用時は不要）
# ANTHROPIC_API_KEY=sk-ant-...

# Slack App
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_CHANNEL_ID=C0123456789
SLACK_TEAM_ID=T0123456789

# 管理者のSlackユーザーID（スラッシュコマンドで whitelist 等の管理機能を使用可能）
# SlackプロフィールのメンバーIDで確認可能
ADMIN_SLACK_USER=U0123456789

# GitHub認証モード（pat または github-app）
GITHUB_AUTH_MODE=pat

# --- PATモード（デフォルト） ---
GITHUB_TOKEN=github_pat_your-token

# --- GitHub Appモード ---
# GITHUB_AUTH_MODE=github-app
# GITHUB_APP_ID=12345
# GITHUB_APP_PRIVATE_KEY_PATH=~/.claps/github-app.pem
# GITHUB_APP_INSTALLATION_ID=67890

# 監視対象リポジトリ (カンマ区切り)
GITHUB_REPOS=owner/repo1,owner/repo2

# 承認サーバー
APPROVAL_SERVER_PORT=3001

# GitHub ポーリング間隔 (ミリ秒、デフォルト: 300000 = 5分)
GITHUB_POLL_INTERVAL=300000

# ホワイトリスト設定（空の場合は全リクエストを拒否）
# ※ ~/.claps/admin-config.json が存在する場合はそちらが優先されます
# GitHubユーザー名（カンマ区切り）
ALLOWED_GITHUB_USERS=octocat,contributor1
# SlackユーザーID（カンマ区切り）
ALLOWED_SLACK_USERS=U01234567,U09876543

# 内省機能（日次で作業履歴を分析し改善提案を生成）
REFLECTION_ENABLED=false
REFLECTION_SCHEDULE=09:00
REFLECTION_TIMEZONE=Asia/Tokyo
REFLECTION_HISTORY_DAYS=7
REFLECTION_MAX_RECORDS=50
